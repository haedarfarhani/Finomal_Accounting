<Dialog @ref="dialog">
    <Title>@Title</Title>
    <Body>
        <label>نام آیتم جدید:</label>
        <input @bind="newItemName" class="form-control" />
    </Body>
    <Footer>
        <button class="btn btn-secondary" @onclick="() => dialog.Close()">انصراف</button>
        <button class="btn btn-primary" @onclick="HandleSave">ذخیره</button>
    </Footer>
</Dialog>
@code {
    [Parameter] public string Title { get; set; } = "افزودن";
    [Parameter] public EventCallback<string> OnSave { get; set; }
    private Dialog dialog = new();
    private string newItemName = "";
    public void Open() => dialog.Open();
    private async Task HandleSave()
    {
        if (!string.IsNullOrWhiteSpace(newItemName))
        {
            await OnSave.InvokeAsync(newItemName);
            newItemName = "";
            dialog.Close();
        }
    }
}