@using Finomal.UI.Blazor.Components.model
<div class="card">
    <div class="card-header">فهرست دوره‌های شمارش</div>
    <div class="card-body">
        <table class="table">
            <thead><tr><th>نام دوره</th><th>تاریخ شروع</th><th>وضعیت</th><th></th></tr></thead>
            <tbody>
                @foreach (var s in stocktakeSessions)
                {
                    <tr>
                        <td>@s.Name</td>
                        <td>@s.StartDate.ToShortDateString()</td>
                        <td>@(s.IsCompleted ? "تکمیل شده" : "در حال انجام")</td>
                        <td><button class="btn btn-sm btn-info">مشاهده جزئیات</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@code {
    [Parameter] public List<StocktakeSession> stocktakeSessions { get; set; } = new();
}
